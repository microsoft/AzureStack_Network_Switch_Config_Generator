{{ define "define_vlan"}}
! vlan.go.tmpl-define_vlan
{{ range . -}}    
vlan {{.VlanID}}
  name {{.VlanName}}
{{ end }}
{{ end }}

{{ define "interface_vlan"}}
! vlan.go.tmpl-interface_vlan
{{ range . -}}    
interface vlan{{.VlanID}}
  description {{.VlanName}}
  mtu {{.Mtu}}
  {{if .Shutdown -}} 
  shutdown 
  {{ else -}} 
  no shutdown
  {{ end -}}
  {{ if .IPAddress -}}
  ip address {{ .IPAddress }}
  no ip redirects
  no ipv6 redirects
  {{ if .Vip.VIPAddress -}}
  hsrp version 2
    hsrp {{.VlanID}}
    priority {{.Vip.PriorityId}} forwarding-threshold lower 1 upper 150
    ip {{.Vip.VIPAddress}}
  {{ end -}}
  {{- end}}
{{ end -}}
{{ end -}}