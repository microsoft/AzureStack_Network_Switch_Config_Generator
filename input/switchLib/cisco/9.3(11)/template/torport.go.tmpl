{{ define "torport"}}
! torport.go.tmpl-torport
{{ range . -}}
{{ if eq .Type "mgmt" -}}
interface {{ .Port }}
  description use the BMCMgmt switch virtual interface
  no ip redirects
  no ipv6 redirects
  shutdown
{{ else -}}
interface {{ .Type}} {{ .Port }}
  description {{ .Description }}
  no cdp enable
  mtu {{ .Mtu }}
  {{if eq .Function "Unused" -}} 
  switchport
  switchport access vlan {{ .UntagVlan }}
  spanning-tree port type edge
  no logging event port link-status
  {{else if or (eq .Function "Compute") (eq .Function "HyperConverged") -}}
  switchport
  switchport mode trunk
  switchport trunk native vlan {{ .UntagVlan }}
  switchport trunk allowed vlan {{ .UntagVlan }}
  {{ range .TagVlans -}}
  switchport trunk allowed vlan add {{ . }}
  {{end -}}
  priority-flow-control mode on
  spanning-tree port type edge trunk
  no logging event port link-status
  service-policy type qos input AZS_SERVICES no-stats
  {{else if eq .Function "Storage" -}}
  switchport
  switchport mode trunk
  switchport trunk native vlan {{ .UntagVlan }}
  switchport trunk allowed vlan {{ .UntagVlan }}
  {{ range .TagVlans -}}
  switchport trunk allowed vlan add {{ . }}
  {{end -}}
  switchport trunk allowed vlan remove {{ .UntagVlan }}
  priority-flow-control mode on
  spanning-tree port type edge trunk
  no logging event port link-status
  service-policy type qos input AZS_SERVICES no-stats
  {{else if eq .Function "MLAG_Peer" -}}
  switchport
  switchport mode trunk
  switchport trunk native vlan {{ .UntagVlan }}
  priority-flow-control mode on
  logging event port link-status
  channel-group {{ .Others.ChannelGroup }} mode active
  {{else if eq .Function "P2P_IBGP" -}}
  priority-flow-control mode on
  logging event port link-status
  channel-group {{ .Others.ChannelGroup }} mode active
  {{else if eq .Function "TOR_BMC" -}}
  switchport
  switchport mode trunk
  {{ range .TagVlans -}}
  switchport trunk allowed vlan {{ . }}
  {{end -}}
  logging event port link-status
  channel-group {{ .Others.ChannelGroup }} mode active
  {{else if eq .Function "P2P_Border1" -}}
  no switchport
  no ip redirects
  ip address {{ .IPAddress }}
  no ipv6 redirects
  {{else if eq .Function "P2P_Border2" -}}
  no switchport
  no ip redirects
  ip address {{ .IPAddress }}
  no ipv6 redirects
  {{ end }}
  {{- if .Shutdown }}shutdown{{ else }}no shutdown{{ end }}
  {{ end }}
{{ end -}}
{{ end -}}